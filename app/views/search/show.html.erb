<div class="container">
    <% @slangs.each do |slang_content| %>
        <%= render '/shared/slang', slang_content: slang_content %>
    <% end %>
    <% if @slangs.any? %>
        <%== pagy_bootstrap_nav(@pagy) %>
    <% else %>
        <h2 class="text-center">There's no results for <b><%= params[:q] %></b>, consider adding your slang!</h2>
    <% end %>
</div>