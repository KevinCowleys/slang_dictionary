<div class="signup-form">
    <%= form_with model: Current.user, url: password_reset_edit_path(token: params[:token]), class: 'form-horizontal' do |f| %>
        <div class="row">
            <div class="col-8 offset-4">
                <h2>Reset your password</h2>
            </div>
        </div>
        <div class="form-group row mb-3">
            <%= f.label :password, 'Password', class: 'col-form-label col-4' %>
            <div class="col-8">
                <%= f.password_field :password, class: 'form-control', required: true %>
            </div>
        </div>
        <div class="form-group row mb-3">
            <%= f.label :password_confirmation, 'Confirm Password', class: 'col-form-label col-4' %>
            <div class="col-8">
                <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
            </div>
        </div>
        <div class="form-group row mb-3">
            <div class="col-8 offset-4">
                <%= f.submit 'Reset Password', class: 'btn btn-primary btn-lg' %>
            </div>  
        </div>
    <% end %>
</div>